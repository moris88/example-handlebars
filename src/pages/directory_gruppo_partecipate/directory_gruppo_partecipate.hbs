<!-- PAGE DIRECTORY_GRUPPO_PARTECIPATE HTML -->

{{#extend "index"}}
{{#content "body"}}

<div class="relative">
    {{> navbarComponent }}

    <section class="rounded-b-lg" style="background-image: url('{{image.src}}'); background-repeat: no-repeat;
      background-position: center center; background-size: cover;">
        <!-- GRUPPO IN PRIMA VISTA-->
        <div class="flex items-start w-full min-h-[400px] p-10 rounded-b-lg">
            <div class="w-1/2 pl-20 pt-20 h-full flex flex-col items-start justify-end gap-4 text-white">
                {{> buttonComponent prev="true" anchor="true" className="flex gap-2 items-center btn btn-white !text-black" text="Indietro"
                href="/directory/gruppi"}}
            </div>
        </div>
    </section>

    <section class="pt-20 2xl:!px-80 !px-8 relative">
        <div class="flex flex-col justify-start items-start gap-4 border-b pb-10">
            <h3 class="font-bold text-4xl">{{title}}</h3>
            <div class="w-full flex justify-between items-center">
                <div class="flex justify-start items-center gap-4">
                    <span
                        class="flex items-center gap-4 px-4 py-2 rounded-full text-green-700 bg-green-100 border border-green-600">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-check2" viewBox="0 0 16 16">
                            <path
                                d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0" />
                        </svg>
                        Partecipante
                    </span>
                    {{> buttonComponent className="btn btn-secondary" text="Annulla partecipazione"
                    onclick="annullaPartecipa(event)" }}
                </div>
                <div class="flex gap-2 items-center">
                    {{> avatarListComponent subscribres=subscribers}}
                </div>
            </div>
        </div>
    </section>

    <section class="2xl:!px-80 !px-8 !mt-0 mb-20">
        <div class="flex flex-col gap-4 mt-10">
            <div class="flex items-center w-full mb-10">
                <a href="https://www.t.me/"
                    class="flex justify-center items-center gap-4 bg-white rounded-full border border-sky-500 text-sky-500 px-3 py-4">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-telegram text-sky-500 w-6"
                        viewBox="0 0 16 16">
                        <path
                            d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.287 5.906q-1.168.486-4.666 2.01-.567.225-.595.442c-.03.243.275.339.69.47l.175.055c.408.133.958.288 1.243.294q.39.01.868-.32 3.269-2.206 3.374-2.23c.05-.012.12-.026.166.016s.042.12.037.141c-.03.129-1.227 1.241-1.846 1.817-.193.18-.33.307-.358.336a8 8 0 0 1-.188.186c-.38.366-.664.64.015 1.088.327.216.589.393.85.571.284.194.568.387.936.629q.14.092.27.187c.331.236.63.448.997.414.214-.02.435-.22.547-.82.265-1.417.786-4.486.906-5.751a1.4 1.4 0 0 0-.013-.315.34.34 0 0 0-.114-.217.53.53 0 0 0-.31-.093c-.3.005-.763.166-2.984 1.09" />
                    </svg>
                    Iscriviti al canale Telegram
                </a>
            </div>
            <p class="font-bold text-xl">Aree tematiche:</p>
            <div class="flex justify-start items-center gap-4 mb-10">
                {{#each tags as |tag|}}
                {{> chipComponent type="primary" text=tag}}
                {{/each}}
            </div>
            <p class="font-bold text-xl">Info gruppo:</p>
            <p>{{info}}</p>
        </div>
    </section>

    <aside class="my-10 !px-8 w-full">
        <div class="w-full flex items-center justify-between pb-6 border-b border-b-black">
            <div class="w-full">
                <p class="font-bold text-4xl mb-4">Eventi riservati al gruppo (7)</p>
                <small>Solo gli alumni che gi√† partecipano al gruppo possono iscriversi a questi eventi</small>
            </div>
            <div class="flex items-center justify-between" <!-- button pagina precedente -->
                <button disabled class="text-primary disabled:text-gray-300" type="button">
                    <svg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width='1.5'
                        stroke='currentColor' class='w-6 h-6 cursor-pointer'>
                        <path stroke-linecap='round' stroke-linejoin='round' d='M15.75 19.5 8.25 12l7.5-7.5' />
                    </svg>
                </button>
                <p class="block font-sans text-base antialiased font-normal leading-relaxed">
                    <!-- corrente/totale pagine -->
                    <strong class="text-primary whitespace-nowrap">1/10</strong>
                </p>
                <!-- button pagina successiva -->
                <button class="text-primary disabled:text-gray-300" type="button">
                    <svg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width='1.5'
                        stroke='currentColor' class='w-6 h-6 text-primary cursor-pointer'>
                        <path stroke-linecap='round' stroke-linejoin='round' d='m8.25 4.5 7.5 7.5-7.5 7.5' />
                    </svg>
                </button>
            </div>
        </div>
        <div class="w-full flex gap-20 flex-col lg:flex-row overflow-y-auto my-10">
            {{#each events.recommended as |item|}}
            {{> cardEventComponent tags=item.tags image=item.image date=date title=item.title
            description=item.description subscribed=item.subscribed href=item.href id=item.id
            favorite=item.favorite}}
            {{/each}}
        </div>
    </aside>

    <aside class="my-10 !px-8 w-full">
        <div class="w-full flex items-center justify-between pb-6 border-b border-b-black">
            <div class="w-full">
                <p class="font-bold text-4xl mb-4">Partecipanti (30)</p>
            </div>
            <div class="flex items-center justify-between" <!-- button pagina precedente -->
                <button disabled class="text-primary disabled:text-gray-300" type="button">
                    <svg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width='1.5'
                        stroke='currentColor' class='w-6 h-6 cursor-pointer'>
                        <path stroke-linecap='round' stroke-linejoin='round' d='M15.75 19.5 8.25 12l7.5-7.5' />
                    </svg>
                </button>
                <p class="block font-sans text-base antialiased font-normal leading-relaxed">
                    <!-- corrente/totale pagine -->
                    <strong class="text-primary whitespace-nowrap">1/10</strong>
                </p>
                <!-- button pagina successiva -->
                <button class="text-primary disabled:text-gray-300" type="button">
                    <svg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width='1.5'
                        stroke='currentColor' class='w-6 h-6 text-primary cursor-pointer'>
                        <path stroke-linecap='round' stroke-linejoin='round' d='m8.25 4.5 7.5 7.5-7.5 7.5' />
                    </svg>
                </button>
            </div>
        </div>
        <div class="grid lg:grid-cols-4 md:grid-cols-2 grid-cols-1 gap-8 py-6 mb-72 md:mb-52">
            {{#each alumni as |alumno|}}
            {{> cardAlumnoComponent alumno=alumno }}
            {{/each}}
        </div>
    </aside>
</div>

<script />

{{/content}}
{{/extend}}