{{#extend "index"}}
{{#content "body"}}

<!-- PAGE HOME HTML -->
<div class="relative">
    {{> navbarComponent }}

    <section class="min-h-[600px] max-h-[600px] p-10 rounded-b-lg bg-white relative">
        <div class="items-carousel relative w-full h-auto overflow-hidden">
            {{#each carousel as |item|}}
            <div class="item-carousel carousel-hidden">
                <div class="flex items-stretch w-full">
                    <div class="lg:w-1/2 w-full h-full flex flex-col items-stretch justify-stretch gap-4 p-10">
                        <div class="flex flex-wrap">
                            {{#each item.tags as |tag|}}
                            {{> chipComponent text=tag}}
                            {{/each}}
                        </div>
                        <h3 class="text-4xl text-primary">{{item.title}}</h3>
                        <p><span class="font-semibold">{{item.formatDate}}</p>
                        <p class="font-medium">{{item.description}}</p>
                        <div class="flex justify-start items-center gap-5 w-full">
                            {{#if (equal item.type "event")}}
                            {{> buttonComponent anchor="true" className="btn btn-primary" text="Visualizza l'evento"
                            href=item.href}}
                            {{else}}
                            {{> buttonComponent anchor="true" className="btn btn-primary" text="Continua a leggere"
                            href=item.href}}
                            {{/if}}

                        </div>
                    </div>
                    <div class="lg:w-1/2 lg:flex hidden min-h-[500px] max-h-[500px]">
                        <img src="{{item.image.src}}" alt="{{item.image.alt}}" class="h-full w-full rounded-lg" />
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <!-- Navigazione Carousel -->
        <div class="carousel-controls">
            <button id="prevBtn" class="btn-carousel"><svg xmlns="http://www.w3.org/2000/svg" fill="none"
                    viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
                </svg>
            </button>
            <button id="nextBtn" class="btn-carousel"><svg xmlns="http://www.w3.org/2000/svg" fill="none"
                    viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
                </svg>
            </button>
        </div>
    </section>
