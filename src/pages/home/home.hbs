    <section class="mt-10 py-20 border-y border-primary bg-red-100 h-auto">
        <p class="text-4xl font-bold text-center my-10">Scopri la tua community di Alumni</p>
        <div class="flex items-center justify-center w-full my-10">{{> buttonComponent anchor="true"
            className="btn btn-primary flex items-center gap-4" next="true" text="Scopri la Directory"
            href="/directory/alumni"}}</div>
        <div class="carousel-container">
            <div class="carousel-track">
                {{#each alumni as |alumno|}}
                {{> cardAlumnoComponent alumno=alumno }}
