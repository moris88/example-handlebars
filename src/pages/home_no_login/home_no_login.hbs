{{#extend "index"}}
{{#content "body"}}

<!-- PAGE HOME HTML -->
<div class="relative">
{{> navbarComponent }}

<div>
    <section class="py-20 h-auto">
        <div class="flex justify-center">
            <div class="h-auto lg:max-w-[30%] max-w-full">
