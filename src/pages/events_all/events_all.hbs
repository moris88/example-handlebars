{{#extend "index"}}
{{#content "body"}}

<!-- PAGE EVENTS_ALL HTML -->
<div class="relative">
    {{> navbarComponent }}

    <!-- TODO: modale successo partecipazione evento!!! -->

    <section class="2xl:!px-80 !px-8 rounded-b-lg">
        <div class="flex pt-20 items-start w-full rounded-b-lg">
            <div class="w-1/2 h-full flex flex-col items-start justify-end gap-4 text-white">
                {{> buttonComponent prev="true" anchor="true" className="flex gap-2 items-center border border-white
                bg-white text-black rounded hover:border-primary
                py-2 px-4" text="Indietro"
                href="/events"}}
            </div>
        </div>
    </section>

    <div class="2xl:!px-80 !px-8 !mt-0">
        <div class="border-b border-b-black my-10">
            <span class="text-4xl font-bold py-3">
                Tutti gli eventi
            </span>
        </div>
        <section class="flex flex-col gap-10">
            {{#each my as |event|}}
            {{> cardEventComponent horizontal="true" tags=event.tags image=event.image date=event.date title=event.title
            description=event.description subscribed=event.subscribed href=event.href id=event.id
            favorite=event.favorite author=event.author lecture_time=event.lecture_time time=event.time}}
            {{/each}}
        </section>
    </div>
</div>

<script />
{{/content}}
{{/extend}}