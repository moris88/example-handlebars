        <section class="my-11">
            <p class="font-bold text-xl mb-6">Indice dei contenuti:</p>
            <ul class="flex flex-col w-full gap-2">
                {{#each contents as |item|}}
                <li class="flex w-full bg-white rounded-lg p-5">
                    <div class="w-3/12 text-primary flex justify-center items-center text-lg font-bold">
                        {{item.id}}
                    </div>
                    <div class="w-9/12 flex flex-col gap-2 justify-start items-start">
                        <a href="#paragraph-{{item.id}}" class="block font-bold text-lg">{{item.title}}</a>
                    </div>
                </li>
                {{/each}}
            </ul>
        </section>
        <section>
            {{#each contents as |item|}}
            <a id="paragraph-{{item.id}}"></a>
            <div class="py-11">
                <h3 class="text-2xl font-bold">{{item.id}}. {{item.title}}</h3>
                <p class="pt-6">{{item.description}}</p>
            </div>
            {{/each}}
        </section>
        <section class="w-full bg-rose-50 border border-primary rounded-xl my-11 py-6 px-10">
            <p class="text-black">Articolo aggiornato il <b>{{editedAt}}</b></p>
        </section>
        <section class="flex gap-4 border-r-2">
            <div class="items-center">
                <span class="w-20 h-20">
                    <img src='{{author.image.src}}' alt='{{author.image.alt}}'
                        class='w-20 h-20 rounded-full border-2 border-primary object-cover' />
                </span>
            </div>
            <div class="flex flex-col">
                <p class="text-primary text-base">Scritto da</p>
                <h3 class='text-2xl font-bold'>{{author.name}}</h3>
                <p class="text-base">{{author.role}}</p>
            </div>
        </section>
    </div>
    
    <aside class="mt-10 mb-10 !px-8">
        <p class="font-bold text-xl mb-4">Continua a leggere</p>
        <div class="w-full flex gap-20 flex-col lg:flex-row overflow-y-auto">
            {{#each recommended as |item|}}
            {{> cardNewsComponent vertical="true" tags=item.tags image=item.image date=date title=item.title
            description=item.description subscribed=item.subscribed href=item.href id=item.id
            favorite=item.favorite author=item.author lecture_time=item.lecture_time time=evidence_primary.time}}
            {{/each}}
        </div>
    </aside>
</div>
