<!-- PAGE DIRECTORY_GRUPPO_NO_PARTECIPATE HTML -->
{{#extend "index"}}
{{#content "body"}}

<div class="relative">
    {{> navbarComponent }}

    <section class="rounded-b-lg" style="background-image: url('{{image.src}}'); background-repeat: no-repeat;
      background-position: center center; background-size: cover;">
        <!-- GRUPPO IN PRIMA VISTA-->
        <div class="flex items-start w-full min-h-[400px] p-10 rounded-b-lg">
            <div class="w-1/2 pl-20 pt-20 h-full flex flex-col items-start justify-end gap-4 text-white">
                {{> buttonComponent prev="true" anchor="true" className="flex gap-2 items-center btn btn-white !text-black" text="Indietro"
                href="/directory/gruppi"}}
            </div>
        </div>
    </section>
    
    <section class="pt-20 2xl:!px-80 !px-8 relative">
        <div class="pb-5">
            <span class="px-4 py-2 rounded-full text-black bg-white border border-black">
                Consigliato per te
            </span>
        </div>
        <div class="flex flex-col justify-start items-start gap-4 border-b pb-10">
            <h3 class="font-bold text-4xl">{{title}}</h3>
            <div class="w-full flex justify-between items-center">
                <div class="flex justify-start items-center gap-4">
                    {{> buttonComponent type="primary" className="btn btn-primary" text="Partecipa al gruppo" onclick="partecipa(event)" }}
                    <span class="w-full h-full flex justify-center items-center cursor-pointer">
                        {{#if favorite}}
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor"
                            class="bi bi-suit-heart-fill text-primary" viewBox="0 0 16 16">
                            <path
                                d="M4 1c2.21 0 4 1.755 4 3.92C8 2.755 9.79 1 12 1s4 1.755 4 3.92c0 3.263-3.234 4.414-7.608 9.608a.513.513 0 0 1-.784 0C3.234 9.334 0 8.183 0 4.92 0 2.755 1.79 1 4 1" />
                        </svg>
                        {{else}}
                        <span class="flex gap-2 items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor"
                                class="bi bi-suit-heart text-primary" viewBox="0 0 16 16">
                                <path
                                    d="m8 6.236-.894-1.789c-.222-.443-.607-1.08-1.152-1.595C5.418 2.345 4.776 2 4 2 2.324 2 1 3.326 1 4.92c0 1.211.554 2.066 1.868 3.37.337.334.721.695 1.146 1.093C5.122 10.423 6.5 11.717 8 13.447c1.5-1.73 2.878-3.024 3.986-4.064.425-.398.81-.76 1.146-1.093C14.446 6.986 15 6.131 15 4.92 15 3.326 13.676 2 12 2c-.777 0-1.418.345-1.954.852-.545.515-.93 1.152-1.152 1.595zm.392 8.292a.513.513 0 0 1-.784 0c-1.601-1.902-3.05-3.262-4.243-4.381C1.3 8.208 0 6.989 0 4.92 0 2.755 1.79 1 4 1c1.6 0 2.719 1.05 3.404 2.008.26.365.458.716.596.992a7.6 7.6 0 0 1 .596-.992C9.281 2.049 10.4 1 12 1c2.21 0 4 1.755 4 3.92 0 2.069-1.3 3.288-3.365 5.227-1.193 1.12-2.642 2.48-4.243 4.38z" />
                            </svg>
                            <span>Salva evento</span>
                        </span>
                        {{/if}}
                    </span>
                </div>
                <div>
                    <p class="text-nowrap"><b>+{{subscribers}}</b> partecipanti</p>
                </div>
            </div>
        </div>
    </section>
    
    <section class="2xl:!px-80 !px-8 !mt-0 mb-20">
        <div class="flex flex-col gap-4 mt-10">
            <div class="flex items-center w-full mb-10">
                <a href="https://www.t.me/" class="flex justify-center items-center gap-4 bg-white rounded-full border border-sky-500 text-sky-500 px-3 py-4">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-telegram text-sky-500 w-6" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.287 5.906q-1.168.486-4.666 2.01-.567.225-.595.442c-.03.243.275.339.69.47l.175.055c.408.133.958.288 1.243.294q.39.01.868-.32 3.269-2.206 3.374-2.23c.05-.012.12-.026.166.016s.042.12.037.141c-.03.129-1.227 1.241-1.846 1.817-.193.18-.33.307-.358.336a8 8 0 0 1-.188.186c-.38.366-.664.64.015 1.088.327.216.589.393.85.571.284.194.568.387.936.629q.14.092.27.187c.331.236.63.448.997.414.214-.02.435-.22.547-.82.265-1.417.786-4.486.906-5.751a1.4 1.4 0 0 0-.013-.315.34.34 0 0 0-.114-.217.53.53 0 0 0-.31-.093c-.3.005-.763.166-2.984 1.09"/>
                        </svg>
                        Iscriviti al canale Telegram
                </a>
            </div>
            <p class="font-bold text-xl">Aree tematiche:</p>
            <div class="flex justify-start items-center gap-4 mb-10">
                {{#each tags as |tag|}}
                {{> chipComponent type="primary" text=tag}}
                {{/each}}
            </div>
            <p class="font-bold text-xl">Info gruppo:</p>
            <p>{{info}}</p>
        </div>
    </section>

    <aside class="mt-10 mb-72 md:mb-52 !px-8 w-full">
        <div class="w-full pb-6 border-b border-b-black">
            <p class="font-bold text-4xl mb-4">Eventi riservati al gruppo (7)</p>
            <small>Solo gli alumni che gi√† partecipano al gruppo possono iscriversi a questi eventi</small>
        </div>
        <div class="w-full grid grid-cols-3 gap-5 my-10">
            {{#each events.recommended as |item|}}
            {{> cardEventComponent tags=item.tags image=item.image date=date title=item.title
            description=item.description subscribed=item.subscribed href=item.href id=item.id
            favorite=item.favorite}}
            {{/each}}
        </div>
    </aside>
</div>

<script />

{{/content}}
{{/extend}}

