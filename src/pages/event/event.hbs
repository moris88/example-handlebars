{{#extend "index"}}
{{#content "body"}}

<!-- PAGE EVENT HTML -->
<div class="relative">
    {{> navbarComponent }}

    <!-- TODO: modale successo partecipazione evento!!! -->

    <section class="rounded-b-lg" style="background-image: url('{{image.src}}'); background-repeat: no-repeat;
      background-position: center center; background-size: cover;">
        <!-- EVENTO IN PRIMA VISTA-->
        <div class="flex items-start w-full min-h-[400px] p-10 rounded-b-lg">
            <div class="w-1/2 pl-20 pt-20 h-full flex flex-col items-start justify-end gap-4 text-white">
                {{> buttonComponent prev="true" anchor="true" className="flex gap-2 items-center btn btn-white !text-black" text="Indietro"
                href="/events"}}
            </div>
        </div>
    </section>

    <section class="!px-8 pt-16 grid grid-cols-6 items-start">
        <div class="flex flex-col gap-4 justify-center items-center">
            {{>formatDateComponent date=date hour=true}}
        </div>
        <div class="col-span-4 flex flex-col justify-start items-start">
            <div class="flex flex-col justify-start items-start gap-4 max-w-[60vw]">
                <h3 class="font-bold text-4xl">{{title}}</h3>
                <p class="text-start text-4xl text-ellipsis w-full whitespace-nowrap overflow-hidden">{{description}}
                </p>
            </div>
            <div class="w-full flex flex-col lg:flex-row justify-between gap-4 my-10">
                <div class="flex justify-start gap-4">
                    <!-- TODO MODALE PER ISCRIZIONE ALL'EVENTO -->
                    {{> buttonComponent type="button" className="btn btn-primary" text="Iscriviti all'evento" }}
                    {{> buttonComponent type="button" className="btn btn-secondary" text="Richiedi informazioni" }}
                </div>
                {{> avatarListComponent number=45}}
            </div>
        </div>
        <div class="flex justify-center items-center">
            <span class="w-full h-full flex justify-center items-center cursor-pointer">
                <!-- TODO SALVATAGGIO DELL'EVENTO NEI MIEI EVENTI DELL'UTENTE -->
                {{#if favorite}}
                <button>
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor"
                        class="bi bi-suit-heart-fill text-primary" viewBox="0 0 16 16">
                        <path
                            d="M4 1c2.21 0 4 1.755 4 3.92C8 2.755 9.79 1 12 1s4 1.755 4 3.92c0 3.263-3.234 4.414-7.608 9.608a.513.513 0 0 1-.784 0C3.234 9.334 0 8.183 0 4.92 0 2.755 1.79 1 4 1" />
                    </svg>
                </button>
                {{else}}
                <button class="flex gap-2 items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor"
                        class="bi bi-suit-heart" viewBox="0 0 16 16">
                        <path
                            d="m8 6.236-.894-1.789c-.222-.443-.607-1.08-1.152-1.595C5.418 2.345 4.776 2 4 2 2.324 2 1 3.326 1 4.92c0 1.211.554 2.066 1.868 3.37.337.334.721.695 1.146 1.093C5.122 10.423 6.5 11.717 8 13.447c1.5-1.73 2.878-3.024 3.986-4.064.425-.398.81-.76 1.146-1.093C14.446 6.986 15 6.131 15 4.92 15 3.326 13.676 2 12 2c-.777 0-1.418.345-1.954.852-.545.515-.93 1.152-1.152 1.595zm.392 8.292a.513.513 0 0 1-.784 0c-1.601-1.902-3.05-3.262-4.243-4.381C1.3 8.208 0 6.989 0 4.92 0 2.755 1.79 1 4 1c1.6 0 2.719 1.05 3.404 2.008.26.365.458.716.596.992a7.6 7.6 0 0 1 .596-.992C9.281 2.049 10.4 1 12 1c2.21 0 4 1.755 4 3.92 0 2.069-1.3 3.288-3.365 5.227-1.193 1.12-2.642 2.48-4.243 4.38z" />
                    </svg>
                    <span>Salva evento</span>
                </button>
                {{/if}}
            </span>
        </div>
    </section>

    <div class="grid grid-cols-6 grid-flow-row lg:grid-flow-col !mt-0 !px-8">
        <section></section>
        <section class="col-span-6 flex flex-col lg:col-span-4">
            <div class="flex flex-col gap-11">
                <div class="w-full border"></div>
                <div class="flex justify-start items-center gap-4">
                    {{> chipComponent type="success" text="Aperto"}}
                    {{#each tags as |tag|}}
                    {{> chipComponent type="secondary" text=tag}}
                    {{/each}}
                </div>
                <div class="flex flex-col">
                    <p class="font-bold text-xl mb-4">Informazioni:</p>
                    <span class="flex gap-4 mt-2">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 text-primary">
                        <path fill-rule="evenodd" d="M6.75 2.25A.75.75 0 0 1 7.5 3v1.5h9V3A.75.75 0 0 1 18 3v1.5h.75a3 3 0 0 1 3 3v11.25a3 3 0 0 1-3 3H5.25a3 3 0 0 1-3-3V7.5a3 3 0 0 1 3-3H6V3a.75.75 0 0 1 .75-.75Zm13.5 9a1.5 1.5 0 0 0-1.5-1.5H5.25a1.5 1.5 0 0 0-1.5 1.5v7.5a1.5 1.5 0 0 0 1.5 1.5h13.5a1.5 1.5 0 0 0 1.5-1.5v-7.5Z" clip-rule="evenodd" />
                        </svg>
                        {{date}} dalle {{startAt}} alle {{endAt}}
                    </span>
                    <span class="flex gap-4 mt-2">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 text-primary">
                        <path d="M4.5 4.5a3 3 0 0 0-3 3v9a3 3 0 0 0 3 3h8.25a3 3 0 0 0 3-3v-9a3 3 0 0 0-3-3H4.5ZM19.94 18.75l-2.69-2.69V7.94l2.69-2.69c.944-.945 2.56-.276 2.56 1.06v11.38c0 1.336-1.616 2.005-2.56 1.06Z" />
                        </svg>
                        Piattaforma {{platform}}
                    </span>
                </div>
                <ul class="flex justify-start flex-wrap gap-10">
                    {{#each speakers as |speaker|}}
                    <li class="flex items-center gap-6">
                        <div class="items-center">
                            <span class="w-20 h-20">
                                <img src='{{speaker.image.src}}' alt='{{speaker.image.alt}}'
                                    class='w-20 h-20 rounded-full border-2 border-primary object-cover' />
                            </span>
                        </div>
                        <div class="flex flex-col justify-start">
                            <p class="text-primary">{{speaker.role}}</p>
                            <h3 class='text-xl font-bold'>{{speaker.name}}</h3>
                            <p class='text-md'>{{speaker.course}}</p>
                        </div>
                        <div class="border h-full"></div>
                    </li>
                    {{/each}}
                </ul>
                <div>
                    <p class="font-bold text-xl mb-4">Aree tematiche:</p>
                    <div class="flex justify-start items-center gap-4">
                        <span class="px-4 py-2 rounded-full text-red-700 bg-white border border-red-600">Design e
                            creativita'</span>
                        <span class="px-4 py-2 rounded-full text-red-700 bg-white border border-red-600">Networking</span>
                        <span class="px-4 py-2 rounded-full text-red-700 bg-white border border-red-600">Educazione</span>
                    </div>
                </div>
                <div>
                    <p class="font-bold text-xl mb-4">Descrizione:</p>
                    <p>{{description}}</p>
                </div>
                <div class="w-full border"></div>
                <div>
                    <p class="font-bold text-xl mb-4">Agenda dell'evento:</p>
                    <ul class="flex flex-col w-full gap-4">
                        {{#each agent_events as |item|}}
                        <li class="flex w-full bg-white rounded-lg p-5">
                            <div class="w-3/12 text-primary flex justify-center items-center text-lg font-bold">
                                {{item.start_hour}} - {{item.end_hour}}
                            </div>
                            <div class="w-9/12 flex flex-col gap-2 justify-start items-start">
                                <p class="font-bold text-lg">{{item.title}}</p>
                                <p class="text-gray-600">{{item.description}}</p>
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                    <p class="mt-6"><b>Nota:</b> Gli orari sono approssimativi e soggetti a modifica.</p>
                </div>
                <div class="w-full bg-rose-50 border border-primary rounded-lg p-8 min-w-[65%]">
                    <p class="text-primary text-xl font-bold">Dopo la partecipazione all’evento potrai ricevere
                        l’Attestato
                        di partecipazione!</p>
                    <p>Sarà necessario almeno il 50% della presenza su Zoom</p>
                </div>
            </div>
        </section>
        <section></section>
    </div>

    <aside class="mt-10 mb-72 md:mb-52 !p-8">
        <p class="font-bold text-xl mb-4">Eventi simili</p>
        <div class="w-full flex gap-20 flex-col lg:flex-row overflow-y-auto">
            {{#each recommended as |item|}}
            {{> cardEventComponent tags=item.tags image=item.image date=date title=item.title
            description=item.description subscribed=item.subscribed href=item.href id=item.id
            favorite=item.favorite}}
            {{/each}}
        </div>
    </aside>

    <footer
        class="w-screen flex flex-col lg:flex-row justify-around items-center gap-6 lg:gap-0 p-10 bg-white rounded-lg fixed bottom-0">
        <div class="w-full md:w-3/4">
            <h3 class="font-bold text-xl">{{title}}</h3>
            <p class="text-start text-xl text-ellipsis w-11/12 whitespace-nowrap overflow-hidden">{{description}}</p>
        </div>
        <div class="w-full md:w-1/4 flex justify-center md:justify-end items-center gap-4">
            {{> buttonComponent type="button" className="btn btn-primary" text="Iscriviti
            all'evento" }}
            {{> buttonComponent type="button" className="btn btn-secondary" text="Richiedi
            informazioni" }}
        </div>
    </footer>
</div>

<script />
{{/content}}
{{/extend}}