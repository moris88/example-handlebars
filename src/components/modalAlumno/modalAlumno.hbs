<!-- COMPONENT MODALALUMNO HTML -->

<div id="backdrop-modal" class="modal modal-deactive">
    <div class="w-full h-full flex justify-end">
        <div id="content-modal" class="transition-all duration-1000 ease-in bg-white rounded-l-lg shadow-lg 2xl:w-1/4 xl:w-1/2 w-0 h-0 flex flex-col p-8 gap-6 opacity-0">
            {{> buttonComponent prev="true" className="flex gap-2 items-center bg-white text-black rounded py-2"
            text="Chiudi" onclick="closeModal()"}}

            <div class='rounded-t-lg max-h-72 flex justify-center w-auto relative'>
                <img src='{{alumno.image.src}}' alt='{{alumno.image.alt}}' class='w-auto h-auto rounded-lg object-cover object-top' />
            </div>
            <div class="w-full">
                <p class="font-bold text-4xl text-primary">{{alumno.name}}</p>
                {{#if alumno.notable}}
                <p class="text-xl">Laureato nel {{alumno.year_of_graduated}} &#183; {{alumno.profession}} </p>    
                {{else}}
                <p class="text-xl text-primary">Ruolo di {{alumno.role}}</p>
                {{/if}}
            </div>
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt-fill text-primary" viewBox="0 0 16 16">
                        <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10m0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6"/>
                    </svg>
                    <p>Vive a {{alumno.city}}</p>
                </div>
                <a class="flex justify-center items-center gap-2 bg-blue-600 text-white py-2 px-6 rounded-lg hover:bg-blue-800" href="{{alumno.links.linkedin}}">
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                            fill="currentColor" class="bi bi-linkedin" viewBox="0 0 16 16">
                            <path
                                d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z" />
                        </svg>
                    </span>
                    <b>Profilo Linkedin</b>
                </a>
            </div>
            {{#if alumno.notable}}
                <span class="flex items-center gap-1 bg-yellow-50 border border-orange-600 rounded-lg text-orange-600 py-3 px-4 text-xl font-semibold"> 
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                        <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.56.56 0 0 0-.163-.505L1.71 6.745l4.052-.576a.53.53 0 0 0 .393-.288L8 2.223l1.847 3.658a.53.53 0 0 0 .393.288l4.052.575-2.906 2.77a.56.56 0 0 0-.163.506l.694 3.957-3.686-1.894a.5.5 0 0 0-.461 0z"/>
                    </svg>
                    {{alumno.award}}
                </span>
            {{/if}}
            <p class="text-xl">Percorso di Studi</p>
            <ul class="w-full max-h-52 overflow-y-auto flex flex-col gap-4">
                {{#each alumno.course_of_study as |course|}}
                <li class="grid grid-cols-2 text-2xl">
                    <div>
                        <p class="font-medium text-primary">{{course.year}}</p>
                        <p>{{course.graduated}}</p>
                    </div>
                    <div>
                        <p class="text-primary">Corso di laurea</p>
                        <p>{{course.department}}</p>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>

