<!-- COMPONENT AVATAR HTML -->
<div class='flex justify-between items-center gap-2'>
  <div class='relative flex items-center text-left dropdown-navbar-avatar'>
    <button class='btn-avatar' type='button'
      onClick="openMenuAvatar()">
      <span class="btn-img-avatar">
        <img src='{{src}}' alt='{{alt}}' class='w-10 h-10 rounded-full max-h-10 max-w-10 object-cover' />
      </span>
      <span class="btn-text-avatar">
        {{name}}
        <svg class='dropdown-navbar-icon-avatar' viewBox='0 0 20 20' fill='currentColor'>
          <path fill-rule='evenodd'
          d='M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z'
          clip-rule='evenodd'>
          </path>
        </svg>
      </span>
    </button>
    <div
      id="dropdown-menu-id"
      class='opacity-0 invisible transition-all duration-300 transform origin-top-right -translate-y-2 scale-95'>
      <div
        class='absolute right-0 w-80 mt-2 top-10 bg-white rounded-md shadow-lg outline-none flex flex-col justify-start items-start gap-6 p-10'>
        <div class="w-full flex justify-between items-start">
          <span class="rounded-full border-2 border-primary">
            <img src='{{src}}' alt='{{alt}}' class='w-20 h-20 min-h-20 rounded-full object-cover' />
          </span>
          <span>
            <button class="flex gap-2 items-center btn btn-transparent" type="button">
              Modifica
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-4">
                <path d="M21.731 2.269a2.625 2.625 0 0 0-3.712 0l-1.157 1.157 3.712 3.712 1.157-1.157a2.625 2.625 0 0 0 0-3.712ZM19.513 8.199l-3.712-3.712-12.15 12.15a5.25 5.25 0 0 0-1.32 2.214l-.8 2.685a.75.75 0 0 0 .933.933l2.685-.8a5.25 5.25 0 0 0 2.214-1.32L19.513 8.2Z" />
              </svg>
            </button>
          </span>
        </div>

        <div class="flex flex-col">
          <h3 class='text-xl font-medium text-primary'>Ciao {{name}}</h3>
          <p class='text-base font-medium'>Ruolo: {{role}}</p>
        </div>
        <div class="flex flex-col gap-2">
          <p class='text-base flex items-center gap-2'>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5 text-primary">
              <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z" clip-rule="evenodd" />
            </svg>
            {{course}}</p>
          <p class='text-base flex items-center gap-2'>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5 text-primary">
              <path fill-rule="evenodd" d="M1.5 4.5a3 3 0 0 1 3-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 0 1-.694 1.955l-1.293.97c-.135.101-.164.249-.126.352a11.285 11.285 0 0 0 6.697 6.697c.103.038.25.009.352-.126l.97-1.293a1.875 1.875 0 0 1 1.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 0 1-3 3h-2.25C8.552 22.5 1.5 15.448 1.5 6.75V4.5Z" clip-rule="evenodd" />
            </svg>
            {{phone}}</p>
          <p class='text-base flex items-center gap-2'>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5 text-primary">
              <path d="M1.5 8.67v8.58a3 3 0 0 0 3 3h15a3 3 0 0 0 3-3V8.67l-8.928 5.493a3 3 0 0 1-3.144 0L1.5 8.67Z" />
              <path d="M22.5 6.908V6.75a3 3 0 0 0-3-3h-15a3 3 0 0 0-3 3v.158l9.714 5.978a1.5 1.5 0 0 0 1.572 0L22.5 6.908Z" />
            </svg>
            {{email}}</p>
        </div>
        {{> buttonComponent anchor="true" className="btn btn-secondary" text="Vai al profilo completo" href=href}}
        <span>
          <button class='text-sm text-primary' onclick="logout()">
            <p class='flex items-center gap-2'>Esci <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                fill="currentColor" class="bi bi-arrow-bar-right" viewBox="0 0 16 16">
                <path fill-rule="evenodd"
                  d="M6 8a.5.5 0 0 0 .5.5h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L12.293 7.5H6.5A.5.5 0 0 0 6 8m-2.5 7a.5.5 0 0 1-.5-.5v-13a.5.5 0 0 1 1 0v13a.5.5 0 0 1-.5.5" />
              </svg></p>
          </button>
        </span>
      </div>
    </div>
  </div>
</div>

<script />