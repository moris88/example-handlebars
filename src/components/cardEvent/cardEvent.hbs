                    {{> buttonComponent next="true" anchor="true" className="flex gap-2 items-center btn btn-primary" text="Visualizza l'evento"
                    href=href}}
                </div>
            </div>
        </div>
    </div>
    {{else}}
    <div class="w-full flex flex-col justify-start bg-white rounded-2xl drop-shadow-md">
        <div class="relative w-auto flex">
            <img src="{{image.src}}" alt="{{image.alt}}" class="w-full min-h-[310px] max-h-[310px] rounded-t-2xl object-cover" />
