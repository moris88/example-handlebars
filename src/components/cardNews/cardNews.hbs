<!-- COMPONENT CARDNEWS HTML -->
<div id="{{id}}" class="w-full" onclick="goToHref('{{href}}')">
    {{#if (equal size "small")}}
    <div class="w-full flex justify-start bg-white rounded-2xl border border-gray-400">
        <div class="w-auto hidden lg:flex">
            <img src="{{image.src}}" alt="{{image.alt}}" class="h-auto max-h-[155px]  min-w-[254px] max-w-[254px] rounded-2xl object-cover object-top" />
        </div>
        <div class="flex flex-col gap-6 justify-start items-start col-span-9 w-full lg:px-7 px-4 py-4">
            <div class="min-h-10 max-h-10 w-full text-ellipsis overflow-hidden flex justify-between items-center">
                    <p class="text-2xl font-bold">
                        <!-- maxChar 100 -->
                        {{truncate title 100}}
                    </p>
                    {{#if favorite}}
                    <span class="text-base font-normal">
                        {{#if favorite}}
                        {{> chipSaveComponent type="save" text="Salvato"}}
                        {{else}}
                        {{> chipSaveComponent type="no_save" text="Salva"}}
                        {{/if}}
                    </span>
                    {{/if}}
            </div>
            <div class="flex justify-between items-center w-full">
                <div class="flex flex-wrap justify-start items-center gap-4">
                    {{#each tags as |tag|}}
                    {{> chipComponent type="primary" text=tag}}
                    {{/each}}
                    &#183;
                    <div class="flex items-center gap-4">
                        <span>{{author}}</span>
                        &#183;
                        <svg data-slot="icon" fill="none" stroke-width="1.5" stroke="currentColor" viewBox="0 0 24 24"
                            xmlns="http://www.w3.org/2000/svg" aria-hidden="true" class="w-4 h-4">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"></path>
                        </svg>
                        <span>{{lecture_time}}</span>
                    </div>
                </div>
                <div>
                    {{> buttonComponent anchor="true" className="btn btn-primary" text="Leggi l'articolo" href="/news/1" }}
                </div>
            </div>
        </div>
    </div>
    {{else}}
    {{#if horizontal}}
    <div
        class="w-full flex flex-shrink-0 justify-start bg-white rounded-2xl drop-shadow-md border border-white hover:border-primary cursor-pointer">
        <div class="max-w-[300px] max-h-[300px]">
            <img src="{{image.src}}" alt="{{image.alt}}"
                class="w-full h-full rounded-l-2xl object-cover object-top" />
        </div>
        <div class="w-4/6 flex flex-col gap-4 justify-start items-start col-span-6 px-10 py-8">
            <div class="min-h-16 max-h-16 text-ellipsis overflow-hidden flex justify-between gap-2 w-full">
                <p class="text-2xl font-bold">
                    <!-- maxChar 60 -->
                    {{truncate title 60}}
                </p>
                <span>
                    {{#if favorite}}
                    {{> chipSaveComponent type="save" text="Salvato"}}
                    {{else}}
                    {{> chipSaveComponent type="save" text="Salva"}}
                    {{/if}}
                </span>
            </div>
            <div class="flex justify-start items-center gap-4">
                {{#each tags as |tag|}}
                {{> chipComponent type="primary" text=tag}}
                {{/each}}
                &#183;
                <div class="flex items-center gap-4 text-nowrap">
                    <svg data-slot="icon" fill="none" stroke-width="1.5" stroke="currentColor" viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg" aria-hidden="true" class="w-4 h-4">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"></path>
                    </svg>
                    <span>{{lecture_time}}</span>
                </div>
            </div>
            <p class="text-base max-h-[6em] text-ellipsis overflow-hidden">{{description}}</p>
        </div>
    </div>
    {{else}}
    {{#if vertical}}
    <div
        class="flex flex-col items-center justify-start bg-white rounded-2xl shadow my-2 hover:cursor-pointer hover:shadow-lg border hover:border-primary">
        <div class="relative col-span-3 min-h-[160px] max-h-[160px] min-w-[418px] object-cover w-full">
            <img src="{{image.src}}" alt="{{image.alt}}"
                class="w-full min-h-[160px] max-h-[160px] rounded-t-2xl object-cover" />
            <span class="absolute top-6 right-6">
                <span class="flex justify-end w-full">
                    {{#if favorite}}
                    {{> chipSaveComponent type="save" text="Salvato"}}
                    {{else}}
                    {{> chipSaveComponent type="save" text="Salva"}}
                    {{/if}}
                </span>
            </span>
        </div>
        <div class="flex flex-col gap-4 justify-start items-start col-span-7 px-10 py-8">
            <div class="min-h-16 max-h-16 text-ellipsis overflow-hidden">
                <p class="text-2xl font-bold">
                    <!-- maxChar 60 -->
                    {{truncate title 60}}
                </p>
            </div>
            <div class="flex justify-start items-center gap-4">
                <div class="flex justify-start items-center gap-4">
                    {{#each tags as |tag|}}
                    {{> chipComponent type="primary" text=tag}}
                    {{/each}}
                    &#183;
                    <div class="flex items-center gap-4 text-nowrap">
                        <svg data-slot="icon" fill="none" stroke-width="1.5" stroke="currentColor" viewBox="0 0 24 24"
                            xmlns="http://www.w3.org/2000/svg" aria-hidden="true" class="w-4 h-4">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"></path>
                        </svg>
                        <span>{{lecture_time}}</span>
                    </div>
                </div>
            </div>
            <p class="text-base max-h-[6em] text-ellipsis overflow-hidden">{{description}}</p>
        </div>

    </div>
    {{else}}
    <div
        class="flex flex-col items-stretch p-10 h-full w-full gap-6 bg-white rounded-2xl drop-shadow hover:cursor-pointer border border-white hover:border-primary">
        <div class="w-full flex justify-between items-center">
            <p>
                {{date}} alle {{time}}
            </p>
            {{#if favorite}}
            {{> chipSaveComponent type="save" text="Salvato"}}
            {{else}}
            {{> chipSaveComponent type="save" text="Salva"}}
            {{/if}}
        </div>
        <p class="text-[32px] font-bold text-primary text-wrap">{{title}}</p>
        <div class="flex justify-start items-center gap-4">
            {{#each tags as |tag|}}
            {{> chipComponent type="primary" text=tag}}
            {{/each}}
            &#183;
            <div class="flex items-center gap-4 text-nowrap">
                <svg data-slot="icon" fill="none" stroke-width="1.5" stroke="currentColor" viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg" aria-hidden="true" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round"
                        d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"></path>
                </svg>
                <span>{{lecture_time}}</span>
            </div>
        </div>
        <p class="text-base w-full h-auto max-h-[18em] text-ellipsis overflow-hidden">
            <!-- maxChar 1000 -->
            {{truncate description 1000}}
        </p>
    </div>
    {{/if}}
    {{/if}}
    {{/if}}
</div>

